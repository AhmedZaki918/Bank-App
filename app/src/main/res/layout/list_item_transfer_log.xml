<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">


    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_access_time"
        app:tint="@color/offWhite" />

    <TextView
        android:id="@+id/date_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:alpha="0.7"
        android:text="Date / Time             :"
        android:textColor="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintStart_toEndOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="@+id/imageView18" />


    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/zeroWhite"
        app:layout_constraintBottom_toBottomOf="@+id/date_time_label"
        app:layout_constraintStart_toEndOf="@+id/date_time_label"
        app:layout_constraintTop_toTopOf="@+id/date_time_label"
        tools:text="27/072023 - 16:22:27" />


    <TextView
        android:id="@+id/source_acc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Source acc              :"
        android:textColor="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/date_time_label"
        app:layout_constraintTop_toTopOf="@+id/imageView19" />


    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:srcCompat="@drawable/outline_person"
        app:tint="@color/offWhite" />

    <TextView
        android:id="@+id/tv_source_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/zeroWhite"
        app:layout_constraintBottom_toBottomOf="@+id/source_acc_label"
        app:layout_constraintStart_toEndOf="@+id/source_acc_label"
        app:layout_constraintTop_toTopOf="@+id/source_acc_label"
        tools:text="105" />


    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"
        app:srcCompat="@drawable/outline_person"
        app:tint="@color/offWhite" />

    <TextView
        android:id="@+id/destination_acc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Destination acc      :"
        android:textColor="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@+id/imageView20"
        app:layout_constraintStart_toStartOf="@+id/date_time_label"
        app:layout_constraintTop_toTopOf="@+id/imageView20" />


    <TextView
        android:id="@+id/tv_destination_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/zeroWhite"
        app:layout_constraintBottom_toBottomOf="@+id/destination_acc_label"
        app:layout_constraintStart_toEndOf="@+id/destination_acc_label"
        app:layout_constraintTop_toTopOf="@+id/destination_acc_label"
        tools:text="106" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@+id/imageView20"
        app:layout_constraintTop_toBottomOf="@+id/imageView20"
        app:srcCompat="@drawable/outline_money_custom" />


    <TextView
        android:id="@+id/amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Amount                    :"
        android:textColor="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@+id/imageView21"
        app:layout_constraintStart_toStartOf="@+id/destination_acc_label"
        app:layout_constraintTop_toTopOf="@+id/imageView21" />


    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/zeroWhite"
        app:layout_constraintBottom_toBottomOf="@+id/amount_label"
        app:layout_constraintStart_toEndOf="@+id/amount_label"
        app:layout_constraintTop_toTopOf="@+id/amount_label"
        tools:text="1000" />


    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toBottomOf="@+id/imageView21"
        app:srcCompat="@drawable/outline_account_balance_wallet" />


    <TextView
        android:id="@+id/source__balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Source balance      :"
        android:textColor="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@+id/imageView22"
        app:layout_constraintStart_toStartOf="@+id/amount_label"
        app:layout_constraintTop_toTopOf="@+id/imageView22" />


    <TextView
        android:id="@+id/tv_source__balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/zeroWhite"
        app:layout_constraintBottom_toBottomOf="@+id/source__balance_label"
        app:layout_constraintStart_toEndOf="@+id/source__balance_label"
        app:layout_constraintTop_toTopOf="@+id/source__balance_label"
        tools:text="4000" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@+id/imageView22"
        app:layout_constraintTop_toBottomOf="@+id/imageView22"
        app:srcCompat="@drawable/outline_account_balance_wallet" />

    <TextView
        android:id="@+id/destination__balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Dest balance           :"
        android:textColor="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@+id/imageView23"
        app:layout_constraintStart_toStartOf="@+id/source__balance_label"
        app:layout_constraintTop_toTopOf="@+id/imageView23" />


    <TextView
        android:id="@+id/tv_destination__balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/zeroWhite"
        app:layout_constraintBottom_toBottomOf="@+id/destination__balance_label"
        app:layout_constraintStart_toEndOf="@+id/destination__balance_label"
        app:layout_constraintTop_toTopOf="@+id/destination__balance_label"
        tools:text="3000" />


    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:tint="@color/offWhite"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@+id/imageView23"
        app:layout_constraintTop_toBottomOf="@+id/imageView23"
        app:srcCompat="@drawable/outline_person_pin" />

    <TextView
        android:id="@+id/user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="User                          :"
        android:textColor="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@+id/imageView24"
        app:layout_constraintStart_toStartOf="@+id/destination__balance_label"
        app:layout_constraintTop_toTopOf="@+id/imageView24" />


    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/zeroWhite"
        app:layout_constraintBottom_toBottomOf="@+id/user_label"
        app:layout_constraintStart_toEndOf="@+id/user_label"
        app:layout_constraintTop_toTopOf="@+id/user_label"
        tools:text="Admin" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:alpha="0.1"
        android:background="@color/offWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView24"
        app:layout_constraintTop_toBottomOf="@+id/tv_user" />


</androidx.constraintlayout.widget.ConstraintLayout>