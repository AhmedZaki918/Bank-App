<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currency.UpdateRateActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header" />


    <Button
        android:id="@+id/btn_update"
        style="@style/button"
        android:layout_marginTop="8dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_exchange_rate" />

    <EditText
        android:id="@+id/et_currency_code"
        style="@style/edit_text"
        android:layout_marginTop="130dp"
        android:drawableStart="@drawable/outline_code"
        android:hint="Currency code "
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_exchange_rate"
        style="@style/edit_text"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/outline_currency_exchange"
        android:drawableTint="@color/zeroWhite"
        android:hint="Exchange rate"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_currency_code" />


</androidx.constraintlayout.widget.ConstraintLayout>